{% set s3Url = global_en_config.environment.s3_uploads_url %}

{% if isDownloadPdf %}
    {% set s3Url = '' %}
{% endif %}

{% if voucherPrice == 0 %}
    {% set fullUrl = s3Url ~ '/images/logos/email/football2019_voucherlogo_instant_' ~ global_en_config.getClientAlias() ~ '.png' %}
{% else %}
    {% set fullUrl = s3Url ~ '/images/logos/email/football2019_voucherlogo_redeem_' ~ global_en_config.getClientAlias() ~ '.png' %}
{% endif %}

{% set voucherLogo = s3Url ~ '/images/logos/email/football2019_1Mlogo_noclient.png' %}

<style>
    #eRoot table, #eRoot td, #eRoot span,  #eRoot a {
        font-family: 'Gotham-Book', sans-serif;
        font-size: 10px;
        line-height: 125%;
    }

    #eRoot table {
        mso-table-lspace: 0;
        mso-table-rspace: 0;
    }

    .mainHeader {
        font-size: 28px;
        font-weight: bold;
        font-family: "Gotham-Bold", sans-serif;
        line-height: 125%;
    }

    .mainSub {
        font-size: 14px;
        padding-bottom: 10px;
        font-weight: bold;
        font-family: "Gotham-Bold", sans-serif;
    }

    {% if isDownloadPdf %}
    .voucher-email-details {
        padding-left: 25px;
        padding-right: 25px;
    }

    #downloadpdf-element-container #downloadpdf-element-container-wrapper #eRoot {
        margin: 0 15px;
    }
    {% endif %}

    .gmailfix {
        display: none!important;
    }

    @media screen yahoo {
        img {
            display: block;
        }
    }
</style>
