{% extends 'FrontEnd/Resources/views/emails/base/base-invite.html.twig' %}

{% set brandColor = '#004689' %}

{% block bodyContainer %}
    <table width="100%" cellpadding="0" cellspacing="0" style="border-top:none; border-bottom:none; background-color:#ffffff;">
        <tr>
            <td>
                {% block bodyContent %}
                    <table cellpadding="10px">
                        <tr>
                            <td align="center">
                                {{ firstName }} {{ lastName }} is personally inviting you to join $2 Million
                                Pro Football Frenzy, the most exciting football rewards program available!
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table align="center" cellpadding="5px">
                                    <tr>
                                        <td align="center" style="font-size:1.4em; font-weight:bold; color:{{ brandColor }};">
                                            Get FREE {{ points }} Just For Signing Up!<br />
                                            It's As Easy As 1, 2, 3...
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table align="center" cellpadding="5px" width="80%">
                                                <tr>
                                                    <td>1. Sign Up: Register today for FREE</td>
                                                </tr>
                                                <tr>
                                                    <td>2. Play: Enjoy fun games and activities</td>
                                                </tr>
                                                <tr>
                                                    <td>3. Win: Receive special rewards and prizes</td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table align="center">
                                    <tr>
                                        <td>
                                            <table align="center" cellpadding="20px">
                                                <tr>
                                                    <td style="background-color:{{ brandColor }};">
                                                        <a title="Confirm Now" href="{{ joinLink }}" target="_blank" style="color:#ffffff; font-weight:bold; text-decoration:none;">
                                                            Join $2 Million Pro Football Frenzy Today!
                                                        </a>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                {% endblock %}
            </td>
        </tr>
    </table>
{% endblock %}